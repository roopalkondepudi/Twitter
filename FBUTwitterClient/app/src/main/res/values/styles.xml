<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>


    <style name="Twitter" parent="AppBaseTheme" >
        <item name="colorPrimary">@color/TwitterVerifiedBlue</item>
        <item name="colorPrimaryDark">@color/TwitterDarkBlue</item>
        <item name="colorAccent">@color/TwitterLogoBlue</item>
        <item name="android:colorBackground">@color/TwitterWhite</item>
        <item name="android:actionBarStyle">@color/TwitterVerifiedBlue</item>
    </style>
</resources>
