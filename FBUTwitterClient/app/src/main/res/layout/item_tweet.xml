<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin = "5dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_vector_person" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvUsername"
        android:text="TextView"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvHandle"
        android:text="TextView"
        android:layout_marginLeft="6dp"/>

    <ImageView
        android:id="@+id/ivReplyIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/tvBody"
        android:layout_alignLeft="@id/ivProfileImage"
        android:layout_alignRight="@id/ivProfileImage"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/reply_icon" />

    <ImageView
        android:id="@+id/ivFavoriteIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ivReplyIcon"
        android:layout_alignRight="@id/tvHandle"
        android:layout_alignLeft="@id/tvHandle"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_vector_heart_stroke" />

</RelativeLayout>